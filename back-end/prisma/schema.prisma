generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("patient")
  bookings Booking[]
}

model Booking {
  id         Int    @id @default(autoincrement())
  userId     Int
  pickupTime DateTime
  status     String @default("pending")
  User       User   @relation(fields: [userId], references: [id])
}
